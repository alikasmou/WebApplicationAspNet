@{

    ViewData["Title"] = "Create Brand";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ecommerce.Vm.BrandsVm;
<div class="row mb-5 mt-5">
    <div class="container">
        <div class="alert alert-primary">
            <a href="@Url.ActionLink("Index","Brands")">Back to Brands</a>
        </div>

    </div>
</div>
<div class="row mb-5 mt-5">
<div class="container">
<div class="col-md-6 offset-3">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="@Url.ActionLink("Create","Brands")" enctype="multipart/form-data">
            <div class="card-body">
                <input asp-for="Id" type="hidden"/>
                <div class="form-group">
                    <label for="BrandName">Brand Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="BrandName" placeholder="Write brand name here" required>
                </div>
                <div class="form-group">
                    <label for="Desscription">Brand Description</label>
                    <textarea asp-for="Description" class="form-control" id="Desscription" rows="3" placeholder="Write a decription..." required></textarea>
                </div>
                <div class="form-group">
                    <label for="file">Brand logo</label>
                    <div>
                        <input type="file" name="file" class="" id="file" />
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
</div>
</div>
</div>